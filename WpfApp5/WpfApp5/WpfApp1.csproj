        <Label x:Name="Otvet" Content="Ответ" HorizontalAlignment="Left" Height="50" Margin="60,205,0,0" VerticalAlignment="Top" Width="140" FontSize="22" FontFamily="Times New Roman"/>
        <Label x:Name="Zagolovok" Content="Вычисление факториала заданного числа" HorizontalAlignment="Left" Height="45" Margin="170,40,0,0" VerticalAlignment="Top" Width="543" FontSize="22" FontFamily="Times New Roman"/>

    </Grid>
</Window>
